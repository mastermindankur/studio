
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default-deny all access.
    // By default, no client-side code (like in a web browser) can read or write any data.
    // This is a secure practice because all our database operations are handled
    // on the server through trusted Server Actions.
    match /{document=**} {
      allow read, write: if false;
    }

    // The contact form and newsletter signups are written by the server
    // using the Admin SDK, which bypasses these client-side security rules.
    // This means only our backend can write to these collections, which is secure.
    match /contacts/{contactId} {
      allow read, write: if false;
    }

    match /newsletterSubscriptions/{subscriptionId} {
      allow read, write: if false;
    }
  }
}
